extends ../node_modules/jade-bootstrap/_bootstrap
append styles
	// Custom styles for this template
	link(href='/stylesheets/login.css', rel='stylesheet')
block body
	.container
		form.form-signin(method='POST')
			h2.form-signin-heading Please sign in
			- if (error)
				p ERREUR :
				p= error
			//label.sr-only(for='inputUser') Username
			input#inputUser.form-control(type='text', name='user', placeholder='Username', required='', autofocus='', value= user)
			//label.sr-only(for='inputPassword') Password
			input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='', value= password)
			//.checkbox
				label
					input(type='checkbox', value='remember-me')
					|  Remember me
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
